<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:layout_width="154dp"
			android:layout_height="140dp"
			android:layout_above="@+id/collection"
			android:layout_alignEnd="@+id/delivery"
			android:layout_alignRight="@+id/delivery"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="24dp"
			android:layout_marginEnd="34dp"
			android:layout_marginRight="34dp"
			android:src="@drawable/soul" />

		<Button
			android:id="@+id/shop_expense"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="197dp"
			android:background="@drawable/button_selector"
			android:drawableLeft="@drawable/shopexpense"
			android:text="SOUL EXPENSE"
			android:textColor="#ff0000"
			android:textSize="@dimen/text_size"
			android:layout_alignParentBottom="true" />





		<Button
			android:id="@+id/collection"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/button_selector"
			android:drawableLeft="@drawable/delivery"
			android:text="PICK UP"
			android:textColor="#ff0000"
			android:textSize="@dimen/text_size"
			android:layout_marginLeft="35dp"
			android:layout_marginStart="35dp"
			android:layout_alignBaseline="@+id/delivery"
			android:layout_alignBottom="@+id/delivery"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />


		<Button
			android:id="@+id/delivery"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/button_selector"
			android:drawableLeft="@drawable/collection"
			android:text="   DELIVERY"
			android:textColor="#ff0000"
			android:textSize="@dimen/text_size"
			android:layout_marginBottom="17dp"
			android:layout_marginLeft="26dp"
			android:layout_marginStart="26dp"
			android:layout_above="@+id/shop_expense"
			android:layout_toRightOf="@+id/collection"
			android:layout_toEndOf="@+id/collection" />


	</RelativeLayout>


</android.support.v4.widget.DrawerLayout>
